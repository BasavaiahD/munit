<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:mulemock="http://www.mulesoft.org/schema/mule/mock"
      xmlns:munit="http://www.mulesoft.org/schema/mule/munit"
      xmlns:script="http://www.mulesoft.org/schema/mule/scripting"
      xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.2/mule.xsd
        http://www.mulesoft.org/schema/mule/mock http://www.mulesoft.org/schema/mule/mock/1.0/mule-mock.xsd
        http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/1.0/mule-munit.xsd
        http://www.mulesoft.org/schema/mule/scripting http://www.mulesoft.org/schema/mule/scripting/3.2/mule-scripting.xsd">

    <spring:beans>
        <spring:import resource="avalara-config.xml"/>
    </spring:beans>

    <munit:config/>
    <mulemock:config of="avaconf" name="avaconfmock"/>

    <munit:before-test name="before.each.test" description="creating expected objects...">

        <script:component>
            <script:script engine="groovy">
                result = new com.avalara.avatax.services.ValidateResult();
                message.setSessionProperty("mock.avalara.result", result);
            </script:script>
        </script:component>

    </munit:before-test>


    <munit:test name="TestAvalara"

                description="
        We want to test that the flow always returns the same payload as we had before calling it.">

        <mulemock:expect config-ref="avaconfmock" when="validateAddress" mustReturn-ref="#[header:session:mock.avalara.result]"/>
        <flow-ref name="main"/>

        <logger message="#[groovy: payload.getClass()]" level="ERROR"/>
        <munit:assert-not-null/>
        <!--<munit:assert-true condition="#[groovy: payload == 'abc']"/>-->
    </munit:test>

</mule>